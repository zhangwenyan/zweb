<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>

  <filter>
    <filter-name>eweb</filter-name>
    <filter-class>top.appx.zutil.eweb.MainFilter</filter-class>
    <init-param>
      <param-name>controllerPath</param-name>
      <param-value>top.appx.zweb.controller</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>eweb</filter-name>
    <url-pattern>*.action</url-pattern>
  </filter-mapping>

</web-app>
